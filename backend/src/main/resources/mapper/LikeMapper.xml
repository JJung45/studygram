<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.studygram.mapper.LikeMapper">
    <insert id="save" parameterType="Like">
        insert into `like` (post_id, user_id)
        values(#{postId}, #{userId})
        <selectKey resultType="int" keyProperty="idx" order="AFTER">
            SELECT IFNULL(MAX(like.idx), 1) FROM `like`
        </selectKey>
    </insert>
    <select id="findLikes" parameterType="Integer" resultType="Like">
        select * from `like` where post_id = #{idx}
    </select>
</mapper>