<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.studygram.mapper.TagMapper">
    <insert id="save" parameterType="Tag">
        insert into tag (contents, post_id)
        values(#{content}, #{postId})
        <selectKey resultType="int" keyProperty="idx" order="AFTER">
            SELECT IFNULL(MAX(tag.idx), 1) FROM tag
        </selectKey>
    </insert>
    <select id="findTags" parameterType="Integer" resultType="Tag">
        select * from tag where post_id = #{idx}
    </select>
    <select id="findByContents" parameterType="ArrayList" resultType="ArrayList">
        select * from tag where contents in
        <foreach collection="list" index="index" item="content" open="(" close=")" separator=",">
            #{content}
        </foreach>
    </select>
    <select id="countAll" resultType="Integer">
        select count(*) from tag
    </select>
    <delete id="delete" parameterType="ArrayList">
        delete from tag where idx in
        <foreach collection="list" index="index" item="tagIndex" open="(" close=")" separator=",">
            #{tagIndex}
        </foreach>
    </delete>
</mapper>